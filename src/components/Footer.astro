---
// 社交媒体链接
const WECHAT_OA_URL = "https://mp.weixin.qq.com/xxxx"; // 改成你的公众号链接
const XIAOHONGSHU_URL = "https://www.xiaohongshu.com/user/profile/xxxx"; // 改成你的小红书主页
const YOUTUBE_URL = "https://www.youtube.com/@bangyin"; // YouTube 频道
const EMAIL = "bangyinchao@gmail.com"; // 邮箱
---

<footer>
  <div class="footer-inner">
    <div class="left">© {new Date().getFullYear()} 邦印</div>

    <div class="right" aria-label="Social Links">
      <a href={WECHAT_OA_URL} target="_blank" rel="noreferrer" aria-label="公众号" title="公众号">
        <!-- WeChat icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path fill="currentColor" d="M9.5 2C4.8 2 1 5.3 1 9.4c0 2.4 1.4 4.6 3.7 6.1l-.7 2.7c-.1.3.2.6.5.4l3.1-1.7c1 .3 2 .5 3 .5.3 0 .6 0 .9-.1-.3-.8-.4-1.7-.4-2.6 0-4 3.8-7.3 8.5-7.3.4 0 .8 0 1.2.1C21.4 4.4 15.9 2 9.5 2Zm-3 6.4c.6 0 1 .4 1 1s-.4 1-1 1-1-.4-1-1 .4-1 1-1Zm6 0c.6 0 1 .4 1 1s-.4 1-1 1-1-.4-1-1 .4-1 1-1Z"/>
          <path fill="currentColor" d="M23 14.7c0-3.4-3.4-6.1-7.6-6.1s-7.6 2.7-7.6 6.1 3.4 6.1 7.6 6.1c.9 0 1.8-.1 2.6-.4l2.7 1.5c.3.2.6-.1.5-.4l-.6-2.3c1.5-1.1 2.4-2.7 2.4-4.5Zm-10.1-.2c-.5 0-.9-.4-.9-.9s.4-.9.9-.9.9.4.9.9-.4.9-.9.9Zm5.1 0c-.5 0-.9-.4-.9-.9s.4-.9.9-.9.9.4.9.9-.4.9-.9.9Z"/>
        </svg>
      </a>

      <a href={XIAOHONGSHU_URL} target="_blank" rel="noreferrer" aria-label="小红书" title="小红书">
        <!-- Xiaohongshu icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
        </svg>
      </a>

      <a href={YOUTUBE_URL} target="_blank" rel="noreferrer" aria-label="YouTube" title="YouTube">
        <!-- YouTube icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path fill="currentColor" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
      </a>

      <a href={`mailto:${EMAIL}`} aria-label="Email" title="邮箱">
        <!-- Mail icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid #eee;
    padding: 2rem 1rem;
    color: #666;
  }
  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .right {
    display: flex;
    gap: 1rem;
  }
  .right a {
    color: inherit;
    opacity: 0.6;
    display: inline-flex;
    align-items: center;
    transition: opacity 0.2s ease;
  }
  .right a:hover {
    opacity: 1;
    color: #111;
  }
</style>

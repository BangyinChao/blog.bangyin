---
const SITE_TITLE = "Bangyin";
import HeaderLink from "./HeaderLink.astro";

// ✅ 把下面 4 个链接替换成你自己的
const LINKS = {
  wechatOA: "https://mp.weixin.qq.com/xxxx", // 公众号文章/主页链接
  xiaohongshu: "https://www.xiaohongshu.com/user/profile/xxxx", // 小红书主页
  youtube: "https://www.youtube.com/@bangyin", // YouTube 频道
  wecom: "/contact", // 企业微信：建议站内 contact 页面放二维码
};
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Writing</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <div class="social-links" aria-label="Bangyin social links">
      <a href={LINKS.wechatOA} target="_blank" rel="noreferrer">
        <span class="sr-only">Bangyin 的公众号</span>
        <span class="chip">公众号</span>
      </a>

      <a href={LINKS.xiaohongshu} target="_blank" rel="noreferrer">
        <span class="sr-only">Bangyin 的小红书</span>
        <span class="chip">小红书</span>
      </a>

      <a href={LINKS.youtube} target="_blank" rel="noreferrer">
        <span class="sr-only">Bangyin 的 YouTube</span>
        <span class="chip">YouTube</span>
      </a>

      <a href={LINKS.wecom}>
        <span class="sr-only">联系 Bangyin（企业微信）</span>
        <span class="chip">企业微信</span>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .social-links,
  .social-links a {
    display: flex;
    align-items: center;
  }

  /* ✅ 小标签风格：克制、干净，不影响你现有布局 */
  .chip {
    font-size: 0.85em;
    line-height: 1;
    padding: 0.35em 0.55em;
    border-radius: 6px;
    border: 1px solid rgba(var(--black), 10%);
    opacity: 0.75;
    transition: opacity 0.15s ease;
  }
  .social-links a:hover .chip {
    opacity: 1;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>

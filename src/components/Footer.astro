---
const WECHAT_OA_URL = "https://mp.weixin.qq.com/xxxx"; // 改成你的公众号链接
const EMAIL = "bangyinchao@gmail.com"; // 改成你的邮箱
---

<footer>
  <div class="footer-inner">
    <div class="left">© {new Date().getFullYear()} Bangyin</div>

    <div class="right" aria-label="Contact">
      <a href={WECHAT_OA_URL} target="_blank" rel="noreferrer" aria-label="WeChat Official Account">
        <!-- WeChat icon -->
        <svg viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
          <path fill="currentColor" d="M9.5 2C4.8 2 1 5.3 1 9.4c0 2.4 1.4 4.6 3.7 6.1l-.7 2.7c-.1.3.2.6.5.4l3.1-1.7c1 .3 2 .5 3 .5.3 0 .6 0 .9-.1-.3-.8-.4-1.7-.4-2.6 0-4 3.8-7.3 8.5-7.3.4 0 .8 0 1.2.1C21.4 4.4 15.9 2 9.5 2Zm-3 6.4c.6 0 1 .4 1 1s-.4 1-1 1-1-.4-1-1 .4-1 1-1Zm6 0c.6 0 1 .4 1 1s-.4 1-1 1-1-.4-1-1 .4-1 1-1Z"/>
          <path fill="currentColor" d="M23 14.7c0-3.4-3.4-6.1-7.6-6.1s-7.6 2.7-7.6 6.1 3.4 6.1 7.6 6.1c.9 0 1.8-.1 2.6-.4l2.7 1.5c.3.2.6-.1.5-.4l-.6-2.3c1.5-1.1 2.4-2.7 2.4-4.5Zm-10.1-.2c-.5 0-.9-.4-.9-.9s.4-.9.9-.9.9.4.9.9-.4.9-.9.9Zm5.1 0c-.5 0-.9-.4-.9-.9s.4-.9.9-.9.9.4.9.9-.4.9-.9.9Z"/>
        </svg>
      </a>

      <a href={`mailto:${EMAIL}`} aria-label="Email">
        <!-- Mail icon -->
        <svg viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
          <path fill="currentColor" d="M4 4h16v16H4z" opacity="0" />
          <path fill="currentColor" d="M4 6v12h16V6H4zm8 7L6 8h12l-6 5zm-6 3V9.2l5.4 4.5a1 1 0 0 0 1.2 0L18 9.2V16H6z"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid #eee;
    padding: 2rem 1rem;
    color: #666;
  }
  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .right {
    display: flex;
    gap: 1rem;
  }
  .right a {
    color: inherit;
    opacity: 0.8;
    display: inline-flex;
    align-items: center;
  }
  .right a:hover {
    opacity: 1;
    color: #111;
  }
</style>
